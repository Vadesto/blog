<%= bootstrap_form_for(@post) do |f| %>

  <div class="field">
    <%= f.text_field :title, id: :post_title %>
  </div>

  <div class="field">
    <%= f.text_area :description, id: :post_description %>
  </div>

  <div class="form-group">
    <%= f.text_area :text, id: :post_text, rows: '8' %>
    <small class="form-text text-muted">You can use markdown.</small>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
