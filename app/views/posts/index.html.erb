<% @posts.each do |post| %>
  <div class="card text-left mb-3">
    <h1 class="card-header ", style="font-size: 18px"><%= post.title %></h1>
    <div class="card-body">
      <h2 class="card-subtitle ", style="font-size: 16px"><%= post.description %></h2>

      <% if can? :destroy, post %><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-light'%><%end%>
      <% if can? :update, post %><%= link_to 'Edit', edit_post_path(post),class: 'btn btn-light' %><%end%>
      <%= link_to 'Show', post,class: 'btn btn-light' %>
    </div>
    <div class="card-footer">
      <%= link_to 'Author profile', profile_path(post.user) %> Created: <%= post.created_at %>
    </div>
  </div>
<% end %>
